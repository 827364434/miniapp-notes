.notes-empty{
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #ccc;
}
.add-img{
  position: relative;
  margin-bottom: 40rpx;
  width: 150rpx;
  height: 150rpx;
  background-color: #eee;
}
.add-img::after,.add-img::before{
  position: absolute;
  content: "";
  display: block;
  width: 100rpx;
  height: 6rpx;
  top: 50%;
  left: 50%;
  background-color: #ccc;
}
.add-img::before{
  transform: translate(-50%,-50%);
}
.add-img::after{
  transform: translateX(-50%) rotate(90deg);
}